{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}", // 現在開いているファイルを指定
                "-o",
                "${fileBasenameNoExtension}" // 出力ファイル名をソースファイル名に合わせる
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}